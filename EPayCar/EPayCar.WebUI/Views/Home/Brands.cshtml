@model IEnumerable<EPayCar.Model.Entities.Carbrands>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/bodyfont.css" rel="stylesheet" />

<br />
<h2>Araba Markaları</h2>



<div class="container mt-5">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Brand</h5>
                        <p class="card-text">@item.Description</p>
                        <a asp-controller="Brand" asp-action="Cars" asp-route-id="@item.ID" class="btn btn-primary">Arabaları Gör</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
